@import "/pages/iconstyle/icon.wxss";
@import "../../wxParse/wxParse.wxss";
page {
  height: 100%;
}

swiper-item {
  height: 100%;
  overflow: scroll;
  overflow-x: hidden;
}

scroll-view {
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.banner {
  height: 430rpx;
  width: 100%;
  text-align: center;
}

.banner image {
  height: 430rpx;
  width: 100%;
}

.swiper-tab {
  width: 100%;
  height: 96rpx;
  display: flex;
 
}

.swiper-tab-list {
  line-height: 96rpx;
  text-align: center;
  flex: 1;
  border-bottom: 1px solid #eee;
  color: #8c8383;
  font-size: 34rpx;
}

.on {
  color: #fb464c;
  position: relative;
  border-bottom: 2px solid #fb464c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.desc-box1 .title {
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.desc-box1 {
  margin-bottom: 32rpx;
}

.desc-box1 .desci {
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 16rpx;
}

.desc-box2 {
  margin-bottom: 40rpx;
}

.text1 {
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.ms-about .fl-left {
  width: 104rpx;
  height: 104rpx;
  border-radius: 100%;
  overflow: hidden;
}

.ms-about {
  line-height: 104rpx;
  margin: 32rpx 0 20rpx;
}

.ms-about image {
  width: 100%;
}

.ms-about text {
  margin-left: 24rpx;
}

.desc-box2 .desc-xq {
  line-height: 44rpx;
}

.desc-box3 .content {
  margin-top: 32rpx;
  line-height: 44rpx;
  height: 100%;
}

.desc-box3 .content image {
  max-width: 100%;
}
.swiper-box{margin-bottom: 140rpx;}

/* 课程目录列表 */

.list-mulu .title {
  padding: 0 32rpx 0 44rpx;
  background: #f3f2f2;
  line-height: 108rpx;
}

.list-mulu .title .left {
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.list-mulu .title .right {
  float: right;
}

.list-mulu .count {
  margin-right: 42rpx;
}

.list-mulu .box1 {
  padding: 0 32rpx 0 44rpx;
}
.list-mulu .mx-title{
  font-size: 34rpx;
  font-family:PingFangSC-Regular;
}
