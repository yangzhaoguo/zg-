page{
font-family:PingFangSC-Regular;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.fl-left{
  float: left
}
.fl-right{
  float: right
}
.mx-title{
  color: #190707;
  font-family:PingFangSC-Medium;
font-weight:500;
}
.ma-title{
  color: #534545
}
.ms-title{
  color: #8C8383
}
.min-title{
