.details{
    overflow: hidden;
    margin:0 32rpx;
    padding:32rpx 0;
 
}
.details .imges{
    position: relative;
}
.details .img{
  width: 212rpx;
  height: 144rpx;
  border-radius: 8rpx;
  overflow: hidden;
  vertical-align:top;

}
.details .audio{
  position: absolute;
  bottom:8rpx;
  right:8rpx;
  width: 40rpx;
  height: 40rpx;
}
.details .audio image{
    width: 40rpx;
  height: 40rpx;
}
.details .cont-box{
  margin-left: 236rpx;
}
.introduction .ma-title{
  margin-right: 24rpx;
}
.price .del{
  color: #C5C1C1;
  text-decoration:line-through;
  margin-right: 24rpx 
}
.introduction{
  margin: 16rpx 0
}
/* 视频课程列表end */

/* 每日易讲列表 */
.live-img {
  margin: 20rpx 24rpx 20rpx 0;
}

.live-img{
  width: 112rpx;
  height: 112rpx;
  overflow: hidden;
  border-radius: 100%;
  position: relative;
}
 .live-img image.img,.live-img .bg{
   width: 112rpx;
  height: 112rpx; 
 }
 .live-img .bg{
background: rgba(0,0,0, 0.2);
position: absolute;
top:0;
left: 0;
 }
.live-img .icon-video{
  width: 24rpx;
  height: 28rpx;
  position: absolute;
  top:50%;
  left:50%;
  margin-left: -12rpx;
   margin-top: -14rpx;
   z-index: 999
}
.live-desctil {
  margin-left: 136rpx;
  margin: 30rpx 0 20rpx 136rpx;

}

.live-desctil .remark {
  font-size: 28rpx;
  margin-top: 16rpx;
}
.live-desctil .remark text{
  margin-right: 32rpx;
}
.live-box1 {
  border-radius: 200px;
  box-shadow: 0px 5px 10px #E8E6E6;
  height: 152rpx;

  display: inline-block;
  padding: 0 20rpx;
}
/* 每日易讲列表end */

/*弹出音频 */
.pop{
 
  height: 108rpx;
position:fixed;
left:0;
bottom:20rpx;
width:100%;

}
.pop-main{
 height: 108rpx;
  background: #4F5A6E; 
  background: -webkit-linear-gradient(left, #16181F,#4F5A6E); 
  background: -o-linear-gradient(right, #16181F,#4F5A6E); 
  background: -moz-linear-gradient(right, #16181F,#4F5A6E);
  background: linear-gradient(to right,#16181F,#4F5A6E);
  border-radius: 200px;
  margin:0 32rpx;
}
.pop-main .close{
width: 84rpx;
height: 84rpx;
overflow: hidden;
display: inline-block
}
.pop-main .img{
width: 84rpx;
height: 84rpx;
overflow: hidden;
display: inline-block
}
/*弹出音频end */

